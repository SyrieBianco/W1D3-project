<h1>Sign In</h1>

<form class="" action="<%= session_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label>Username
    <input type="text" name="user[username]" value="<%= @user.username if @user %>">
  </label>

  <label>Password
    <input type="text" name="user[password]" value="<%= @user.password if @user %>">
  </label>

  <input type="submit" name="" value="Sign In">

</form>
