<h1><%= @link.title %></h1>
<h2>by: <%= @link.user.username %> </h2>
<h3>URL: <%= @link.url %> </h3>

<%= link_to "Links", links_url %>
<%= link_to "Edit Link", edit_link_url(@link) %>

<p>Comments</p>
<ul>
<% @link.comments.each do |comment| %>
<li><%= comment.body %> |
  <%= button_to "Remove Comment", comment_url(comment), method: :delete %>
  </li>
<% end %>
</ul>

Add Comment
<form class="" action="<%= comments_url %>" method="post">
  <input type="hidden" name="comment[link_id]" value="<%= params[:id] %>">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label>Comment
    <input type="text" name="comment[body]" value="">
  </label>

  <input type="submit" name="" value="Add Comment">
</form>
